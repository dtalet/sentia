{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageSKU": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The type of replication to use for the storage account."
      }
    },   
    "resourceNamePrefix": {
      "type": "string",
      "maxLength": 11,
      "defaultValue": "sentia",
      "metadata": {
        "description": "The value to use for starting the storage account name. Use only lowercase letters and numbers."
      }
    }
  },
  "variables": {
    "sentiaPrefix": "172.16.0.0/12",
    "sentiaSubnet1Name": "Subnet-1",
    "sentiaSubnet1Prefix": "172.16.0.0/24",
    "sentiaSubnet2Name": "Subnet-2",
    "sentiaSubnet2Prefix": "172.16.1.0/24",
    "sentiaSubnet3Name": "Subnet-3",
    "sentiaSubnet3Prefix": "172.16.2.0/24",
    "resourceName": "[concat(toLower(parameters('resourceNamePrefix')), uniqueString(resourceGroup().id))]"        
  },
  "resources": [
    {
      "name": "[variables('resourceName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('storageSKU')]"
      },
      "kind": "Storage",
      "location": "[resourceGroup().location]",
      "tags": {        
        "Environment": "[resourceGroup().tags.Environment]",
        "Company": "[resourceGroup().tags.Company]"
      },
      "properties": {        
      }
    },
    {
      "name": "[variables('resourceName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {                
                "Environment": "[resourceGroup().tags.Environment]",
                "Company": "[resourceGroup().tags.Company]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('sentiaPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('sentiaSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('sentiaSubnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('sentiaSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('sentiaSubnet2Prefix')]"
                        }
                    },

                    {
                      "name": "[variables('sentiaSubnet3Name')]",
                      "properties": {
                          "addressPrefix": "[variables('sentiaSubnet3Prefix')]"
                      }
                  }
                ]
            }

    }
  ],
  "outputs": {  }
}